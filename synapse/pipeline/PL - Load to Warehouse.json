{
	"name": "PL - Load to Warehouse",
	"properties": {
		"activities": [
			{
				"name": "Load to Warehouse",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "SqlPoolSink",
						"preCopyScript": {
							"value": "TRUNCATE TABLE @{pipeline().parameters.databaseSchema}.@{pipeline().parameters.tableName}",
							"type": "Expression"
						},
						"allowCopyCommand": true,
						"tableOption": "autoCreate"
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_adls_synw_csv",
						"type": "DatasetReference",
						"parameters": {
							"folderPath": {
								"value": "@{pipeline().parameters.dataSourceID}/@{pipeline().parameters.databaseSchema}/@{pipeline().parameters.tableName}/@{formatDateTime(pipeline().parameters.dateAndTimeOfImport, 'yyyy/MM/dd')}",
								"type": "Expression"
							},
							"filePath": {
								"value": "@{pipeline().parameters.tableName}_@{formatDateTime(pipeline().parameters.dateAndTimeOfImport, 'yyyyMMdd-hhmmss')}.csv",
								"type": "Expression"
							},
							"tier": "silver"
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_sqlpool_generic",
						"type": "DatasetReference",
						"parameters": {
							"databaseSchema": {
								"value": "@pipeline().parameters.databaseSchema",
								"type": "Expression"
							},
							"tableName": {
								"value": "@pipeline().parameters.tableName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"databaseSchema": {
				"type": "string"
			},
			"dataSourceID": {
				"type": "string"
			},
			"dateAndTimeOfImport": {
				"type": "string"
			},
			"tableName": {
				"type": "string"
			}
		},
		"variables": {
			"queryText": {
				"type": "String"
			}
		},
		"folder": {
			"name": "P03 - Load to Warehouse"
		},
		"annotations": []
	}
}